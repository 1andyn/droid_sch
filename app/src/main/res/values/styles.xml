<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:homeAsUpIndicator">@null</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Style for Menu Buttons -->
    <style name="btnStyleGenoa" parent="@android:style/Widget.Button">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">35dip</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:background">@drawable/btn_genoa</item>
        <item name="android:padding">5dip</item>
        <item name="android:height">40dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>


    <style name="tvTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:padding">5sp</item>
        <item name="android:textColor">#FFF</item>
        <!--<item name="android:background">@drawable/tv_genoa</item>-->
    </style>
    <style name="tvSubtitle" parent="tvTitle">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Styles for ListView Contents -->
    <style name="itemHeading" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#4c898e</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="itemHeadingValue" parent="itemHeading">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="itemSubheading" parent="itemHeading">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="itemSubheadingValue" parent="itemSubheading">
        <item name="android:textColor">#FFF</item>
    </style>

    <!-- Styles for Prefences Activity -->
    <style name="EditTextBasic" parent="android:Widget.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="EditTextTimePicker" parent="@style/EditTextBasic">
        <item name="android:editable">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewBasic" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#fff</item>
    </style>
    <style name="TextViewTitle" parent="@style/TextViewBasic">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CheckBoxBasic" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CheckBoxTitle" parent="@style/CheckBoxBasic">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_aqua</item>
    </style>

    <!-- Styles for Help dialog GridViews  -->
    <style name="tvFeature" parent="android:Widget.TextView">
        <item name="android:textColor">@color/dark_aqua</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>

    </style>
    <style name="tvFeatureDescription" parent="@style/tvFeature">
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:textColor">#fff</item>
    </style>

</resources>
