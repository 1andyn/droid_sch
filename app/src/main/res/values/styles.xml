<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:homeAsUpIndicator">@null</item>
    </style>

    <!-- Style for Menu Buttons -->
    <style name="btnStyleGenoa" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/btn_genoa</item>
        <item name="android:padding">5dip</item>
    </style>

    <!-- Hack for Robolectric to run with appcompat.v7 -->
    <style name="RoboAppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
    </style>

    <style name="tvTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:padding">5sp</item>
        <item name="android:textColor">#FFF</item>
        <!--<item name="android:background">@drawable/tv_genoa</item>-->
    </style>
    <style name="tvSubtitle" parent="tvTitle">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Styles for ListView Contents -->
    <style name="itemHeading" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#4c898e</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="itemHeadingValue" parent="itemHeading">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="itemSubheading" parent="itemHeading">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="itemSubheadingValue" parent="itemSubheading">
        <item name="android:textColor">#FFF</item>
    </style>

</resources>
