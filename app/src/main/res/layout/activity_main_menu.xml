<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/mm_layout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/mm_img_layout"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/img_title"
            android:adjustViewBounds="true"
            android:contentDescription="@string/dsc_mm_title" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_logo"
            android:adjustViewBounds="true"
            android:maxWidth="250dp"
            android:contentDescription="@string/dsc_mm_logo" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/mm_img_layout"
        android:id="@+id/mm_bt_layout">

        <Button
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/bt_txt_create"
            android:id="@+id/bt_create"
            android:textStyle="bold"
            android:layout_margin="2dp"
            style="@style/btnStyleGenoa" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/bt_txt_view"
            android:id="@+id/bt_view"
            android:textStyle="bold"
            android:layout_margin="2dp"
            style="@style/btnStyleGenoa" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/bt_txt_search"
            android:id="@+id/bt_search"
            android:textStyle="bold"
            android:layout_margin="2dp"
            style="@style/btnStyleGenoa" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/bt_txt_pref"
            android:id="@+id/bt_pref"
            android:textStyle="bold"
            android:layout_margin="2dp"
            style="@style/btnStyleGenoa" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/bt_txt_exit"
            android:id="@+id/bt_exit"
            android:textStyle="bold"
            android:layout_margin="2dp"
            style="@style/btnStyleGenoa" />
    </LinearLayout>


</RelativeLayout>
