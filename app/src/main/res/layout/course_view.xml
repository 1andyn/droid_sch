<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:focusableInTouchMode="false"
    android:focusable="false"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <!-- -Contains Course Name and CRN -->
            <LinearLayout
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:textColor="@color/white"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/tv_crs_static"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_course"/>
                <TextView
                    android:typeface="monospace"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/tv_crs"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_aqua"
                    android:text="XXXXXXXX"/>
                <TextView
                    android:textColor="@color/white"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:id="@+id/tv_crn_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_crn" />
                <TextView
                    android:textColor="@color/white"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:id="@+id/tv_crn"
                    android:textSize="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXXX" />
            </LinearLayout>
            <!-- -Contains Title -->
            <LinearLayout
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:focusable="false"
                    android:textSize="15dp"
                    android:focusableInTouchMode="false"
                    android:id="@+id/tv_title_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_title"/>
                <TextView
                    android:textColor="@color/white"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/tv_title"

                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"/>
            </LinearLayout>
            <!-- -Contains Professor-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/tv_prof_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/res_prof"/>
                <TextView
                    android:textColor="@color/white"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/tv_prof"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="XXXXXXXXXXXXXXX"/>
            </LinearLayout>
            <!-- -Contains Date Array and Location  -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/tv_day_static"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/res_days"/>
                <TextView
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:typeface="monospace"
                    android:textColor="@color/dark_aqua"
                    android:id="@+id/tv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXXXXXX"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/tv_loc_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/res_loc"/>
                <TextView
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXXXXXXXX"/>
            </LinearLayout>
            <!-- -Contains Start Time, End Time -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/tv_start_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/res_start"/>
                <TextView
                    android:typeface="monospace"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_aqua"
                    android:id="@+id/tv_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XX:XX"/>
                <TextView
                    android:paddingLeft="32dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/tv_end_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/res_end"/>
                <TextView
                    android:typeface="monospace"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_aqua"
                    android:id="@+id/tv_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XX:XX"/>
            </LinearLayout>
            <!-- -Contains Date Array2 and Location2  -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/tv_day2_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/res_days"/>
                <TextView
                    android:typeface="monospace"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_aqua"
                    android:id="@+id/tv_day2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXXXXXX"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/tv_loc2_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/res_loc"/>
                <TextView
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_loc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXXXXXXXX"/>
            </LinearLayout>
            <!-- -Contains Start Time2, End Time2 -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/tv_start2_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/res_start"/>
                <TextView
                    android:typeface="monospace"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_aqua"
                    android:id="@+id/tv_start2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XX:XX"/>
                <TextView
                    android:paddingLeft="32dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/tv_end2_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/res_end"/>
                <TextView
                    android:typeface="monospace"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_aqua"
                    android:id="@+id/tv_end2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XX:XX"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <CheckBox
            android:paddingRight="10dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/chk_star"/>
    </LinearLayout>
</LinearLayout>
